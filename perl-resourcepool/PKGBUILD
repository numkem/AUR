# Maintainer: Sebastien Bariteau <numkem@gmail.com>
pkgname=perl-resourcepool
pkgver=1.0106
pkgrel=1
pkgdesc="Perl/CPAN ResourcePool A connection caching and pooling class"
arch=(any)
license=(GPL)
url="http://search.cpan.org/~mws/ResourcePool-${pkgver}/lib/ResourcePool.pod"
source="http://search.cpan.org/CPAN/authors/id/M/MW/MWS/ResourcePool-1.0106.tar.gz"
depends=('perl')
options=(!emptydirs)
md5sums=('cacc188bf6a4f8707fb5495eb98b2af1')
provides=('ResourcePool.pm')

build() {
  cd "$srcdir/ResourcePool-$pkgver"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find $pkgdir -name perllocal.pod -delete
  find $pkgdir -name .packlist -delete
}
